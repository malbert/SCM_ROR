<div class="title">
  <h1><%=t :log_in%></h1>
</div>

<div class='clear'></div>

<div id="user_form_wrapper">
      <% form_for @user_session, :url => user_session_path do |f| %>
      <div class="form_content">

          <%= render "shared/error_messages", :target => @user_session %>  
          <fieldset>
            <%= f.label t(:email) %>
            <%= f.text_field :email %>
          </fieldset>
          <fieldset>
            <%= f.label t(:password) %>
            <%= f.password_field :password %>
          </fieldset>
          <fieldset>
            <%= f.check_box :remember_me %>
            <%= f.label t(:remember_me) %>
          </fieldset>
      </div>
    <div class="formtastic_buttons">
      <%= f.submit t(:login) %>
    </div>
    <% end %>
</div>