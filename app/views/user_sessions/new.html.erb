<h1>Connexion</h1>

    <% form_for @user_session, :url => user_session_path do |f| %>
      <%= f.error_messages %>
      <div>
        <%= f.label 'Email' %>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label 'Mot de passe' %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label "Se souvenir de moi" %>
      </div>
      <%= f.submit "Connexion" %>
    <% end %>