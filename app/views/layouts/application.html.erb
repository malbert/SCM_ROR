<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Sport Club Management</title>
        
        <%= stylesheet_link_tag :all %>
        <%= javascript_include_tag :defaults %>
        <%= csrf_meta_tag %>
        
        <!-- include the default css files -->
	<link rel="stylesheet" href="/stylesheets/layout.css" type="text/css" />
        <link rel="stylesheet" type="text/css" href="/markitup/skins/markitup/style.css" />
        <link rel="stylesheet" type="text/css" href="/markitup/sets/default/style.css" />
        
        <!-- include the default js files -->
        <script type="text/javascript" src="/javascripts/jquery-1.6.2.min.js"></script>
        <script type="text/javascript" src="/javascripts/superfish.js"></script>
        <script type="text/javascript" src="/javascripts/jquery.markitup.js"></script>
        <script type="text/javascript" src="/javascripts/common.js"></script>
        <script type="text/javascript" src="/markitup/sets/default/set.js"></script>
        
 
        
    </head>
    
    <body>
        <div id="page">
            <div class="scm_header">
                <div class="logo">
                    <img src="/images/logo.png" />
                </div>
                <div class="name">
                    <h1>Sport Club Management</h1>
                    <div class="slogan">
                        Less time managing, more time practicing
                    </div>
                </div>
            </div>
            <div id="user_menu">
                <ul class="menu">
                  
                  <% if current_user %>
                    <li>
                        <%=t :hi %>, <%= current_user.firstname %>
                    </li>
                    <li>
                        <%= link_to t(:my_account), current_user %>
                    </li>
                    <li>
                        <%= link_to t(:logout), user_session_path, :method => :destroy %>
                    </li>
                  <% else %>
                    <li>
                        <%= link_to t(:login), new_user_session_path, :id => "signin" %>
                    </li>
                    <li>
                        <%= link_to t(:register), new_user_path %>
                    </li>
                  <% end %>
                </ul>
            </div>
            
            <div id="main-menu-wrapper" class="main-menu-wrapper full-width clearfix">
                <div id="main-menu" class="main-menu">
                    <div id="block-superfish-1" class="block block-superfish contextual-links-region">
                        
                        <ul id="superfish-1" class="sf-menu main-menu sf-style-default">
                          <% if current_user %>
                            <li>
                                <%= link_to t('main_menu.dashboard'), "/dashboard" %> 
                            </li>
                          <% else %>  
                            <li>
                                <a title="" href="/"><%=t 'main_menu.home' %></a>
                            </li>
                            
                            <li>
                                <a title="" href="/"><%=t 'main_menu.quicktour' %></a>
                            </li>
                            
                            <li>
                                <a title="" href="/"><%=t 'main_menu.pricing' %></a>
                            </li>
                          
                          <% end %>
                                                        
                            <li>
                                <a title="" href="/"><%=t 'main_menu.contactus' %></a>
                            </li>
                            
                        </ul>
                        
                    </div>
                    
                </div>
                <div class="clear"></div>
            </div>
              
              <div id="main">
                <%= yield %>
              </div>
            
            
            </div>
          
          </div>
      
          <!-- Login modal window -->
          <div id="boxes">
 
              <% if ! current_user %>
              <!-- login modal box here -->
         
              <div id="dialog" class="window">
                <div id="login_modal" class="modal_content">
                  
                  <div class="title">
                    <h1><%= t :log_in %> </h1>
                  </div>
                  <div class="login_note"><%= t :login_note %></div>
                  <% form_for @user_session, :remote => true, :url => user_session_path, :html => { :'data-type' => 'html' } do |f| %>
                    <div class="form_content">

                        <fieldset>
                          <%= f.label t(:email) %>
                          <%= f.text_field :email %>
                        </fieldset>
                        <fieldset>
                          <%= f.label t(:password) %>
                          <%= f.password_field :password %>
                        </fieldset>
                        <fieldset>
                          <%= f.check_box :remember_me %>
                          <%= f.label t(:remember_me) %>
                        </fieldset>
                    </div>
                  <div class='modal_footer'>
                    <%= f.submit t(:login) %>
                    <%= link_to t(:register), new_user_path %>
                    <a href="#" class="close"><%= t :cancel %> </a>
                  </div>
                  <% end %>
                    
                  
                </div>
              </div>
              
          </div>
          <% end %>
          <!-- Do not remove div#mask, because you'll need it to fill the whole screen --> 
          <div id="mask"></div>
        
    </body>
    
</html>